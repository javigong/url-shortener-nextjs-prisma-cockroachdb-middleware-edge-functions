generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "cockroachdb"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model ShortLink {
  id        Int      @id @default(sequence())
  createdAt DateTime @default(now())

  url       String?   @db.String(2000)
  slug String @unique

  @@index(slug)
}
